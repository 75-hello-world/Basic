<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:gravity="center_horizontal" android:padding="10px"
	>
		
	<Button android:id="@+id/next_button"  
        android:layout_width="wrap_content" 
        android:layout_height="40dip"
        android:textSize="12dip"
        android:layout_marginLeft="10dip" 
        android:layout_marginBottom="8dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom ="true"
        android:text="Next" />
        
    <Button android:id="@+id/done_button"  
        android:layout_width="wrap_content" 
        android:layout_height="40dip"
        android:textSize="12dip"
        android:layout_marginLeft="10dip" 
        android:layout_marginBottom="8dip"
        android:layout_toRightOf="@id/next_button"
        android:layout_alignTop="@id/next_button"
        android:text="Done" />
        
	<Button android:id="@+id/replace_all_button"  
        android:layout_width="wrap_content" 
        android:layout_height="40dip"
        android:textSize="12dip"
        android:layout_marginLeft="10dip" 
        android:layout_marginBottom="8dip"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/next_button"
        android:text="Replace All" />
         

    <Button android:id="@+id/replace_button"  
        android:layout_width="wrap_content" 
        android:layout_height="40dip"
        android:textSize="12dip"
        android:layout_marginLeft="10dip" 
        android:layout_marginBottom="8dip"
        android:layout_toLeftOf="@id/replace_all_button"
        android:layout_alignTop="@id/next_button"
        android:text="Replace" />
		


       
       	<EditText android:id="@+id/replace_text"
		android:layout_width="fill_parent"
		android:layout_height="40dip"
		android:layout_marginLeft="10dip"
		android:layout_marginBottom="5dip"
		android:layout_above="@id/next_button"
		style="@style/edit_text_l" />	
       
     <TextView android:id="@+id/replace_with"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/replace_text"
		android:layout_marginLeft="10dip"
		android:layout_marginBottom="5dip"
		style="@style/label_l"
		android:text="Replace With:" />
 
	<EditText android:id="@+id/search_text"
		android:layout_width="fill_parent"
		android:layout_height="40dip"
		android:layout_marginLeft="10dip"
		android:layout_marginBottom="5dip"
		android:layout_above="@id/replace_with"
		style="@style/edit_text_l" />	

	<TextView android:id="@+id/search_for"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
		android:layout_marginBottom="5dip"
		android:layout_above="@id/search_text"
		style="@style/label_l"
		android:text="Search For:" />

        <EditText android:id="@+id/the_text"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_above="@id/search_for"
		android:layout_marginLeft="10dip"
		android:layout_marginBottom="5dip"
		android:scrollHorizontally="true"
		style="@style/edit_text_l"
		 />

		
		

</RelativeLayout>